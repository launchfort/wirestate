{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "target": "es2015",
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": true,
    "incremental": true,
    "outDir": "lib",
    "newLine": "LF",
    "jsx": "react",
    "reactNamespace": "React",
    "lib": [
      "es2015"
    ]
  },
  "include": [
    "src/**/*.js"
  ],
  "exclude": [
    "src/generator.js",
    "src/compile.js",
    "src/interpreter",
    "src/bindings"
  ]
}